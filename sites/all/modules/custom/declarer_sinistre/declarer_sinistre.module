function declarer_sinistre_form_submit($form, &$form_state){
    print('<pre>'. print_r($form_state['values'], TRUE) .'</pre>'); die();
    $data = array();

    $nature_sinistre = array(
      'auto' => array(
        '0' => 'Collision entre vehicule', 
        '1' => 'Vitre brisee', 
        '2' => 'nature auto 2',
        '3' => 'nature auto 3',
      ),
      'habitation' => array(
        '0' => 'Cambriolage', 
        '1' => 'Catastrophe naturelle', 
        '2' => 'Incendie',
      ),
      'accident' => array('Accident de la route',
        '0' => 'nature accident 2',
        '1' => 'nature accident 3',
      ),
    );

    $estimation = array(
      '0' => 50000,
      '1' => 100000,
      '2' => 500000,
      '3' => 1000000,
    );

    //type du contrat
    $data['typeContrat'] = $form_state['values']['type'];
    if ($data['typeContrat'] === 'Auto'){
      //numéro du contrat
      $data['idContrat'] = $form_state['values']['contrat_auto'];
      //nature du sinistre
      $data['natureAuto'] = $nature_sinistre['auto'][$form_state['values']['nature_auto']];
      //Si le véhicule est ou sera déposé dans un garage?
      if ($form_state['value']['garage'] = '1') {
        # code...
        $data['nomReparareur'] = $form_state['values']['nom'];
        $data['jourReparation'] = (int) $form_state['values']['date']['day'];
        $data['moisReparation'] = (int) $form_state['values']['date']['month'];
        $data['anneeReparation'] = (int) $form_state['values']['date']['year'];
      }
    }

    if ($data['typeContrat'] === 'Habitation'){
      //numéro du contrat
      $data['idContrat'] = $form_state['values']['contrat_habitation'];
      //nature du sinistre
      $data['natureHabitation'] = $nature_sinistre['habitation'][$form_state['values']['nature_habitation']];
    }

    if ($data['typeContrat'] === 'Assistance et Accident'){
      //numéro du contrat
      $data['idContrat'] = $form_state['values']['contrat_accident'];
      //nature du sinistre
      $data['natureAccident'] = $nature_sinistre['accident'][$form_state['values']['nature_accident']];
    }
    
    //estimation des dégâts
    $data['estimation'] = $estimation[$form_state['values']['estimation']];
    //decrire les dommages
    $data['dommages'] = $form_state['values']['dommages'];

    var_dump($data); die();
}