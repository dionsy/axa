              $output .=     '<div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 visualisation-contrat field-contrat">';
              $output .=       '<span> '.l($iview ,'contrat/'.$numContrat,array('html'=> true)).'</span>';      
              $output .=     '</div>';
            }
